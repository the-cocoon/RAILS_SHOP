  .ptz--theme-0
    = form_tag one_click_orders_path, { remote: true, class: 'one-click-order--form' } do
      - if item
        = hidden_field_tag :item_id,    item.id
        = hidden_field_tag :item_klass, item.class
        = hidden_field_tag :item_title, item.title

      .mb15= text_field_tag :phone, '', class: 'ptz--input ptz--size-18', placeholder: '+7 911 000 11 22', maxlength: 20
      .mb15= submit_tag 'Перезвоните мне', class: 'ptz--btn ptz--size-20'

      - if item
        .ptz--hr-0.mt15.mb15
        .fs13= item.title
        .ptz--hr-0.mt15.mb15
      - else
        .ptz--hr-0.mt15.mb15

  .fs13.lh130
